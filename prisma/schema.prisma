
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(uuid())
  email             String          @unique
  password          String?
  googleId          String?         @unique
  name              String?
  profilePicture    String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  profile           UserProfile?
  workoutSessions   WorkoutSession[]
}

model UserProfile {
  id                String          @id @default(uuid())
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String          @unique
  age               Int?
  weight            Float?          // in kg
  height            Float?          // in cm
  fitnessGoal       String?         // e.g., "Lose Weight", "Build Muscle", "Improve Endurance"
  activityLevel     String?         // e.g., "Beginner", "Intermediate", "Advanced"
  preferredWorkouts String[]        // e.g., ["Cardio", "Strength", "Yoga"]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model Exercise {
  id           String        @id @default(uuid())
  name         String
  description  String
  muscleGroup  String
  difficulty   String
  instructions String[]
  imageUrl     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  workouts     WorkoutExercise[]
}

model Workout {
  id          String        @id @default(uuid())
  title       String
  description String
  duration    Int           // in minutes
  difficulty  String
  category    String
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  exercises   WorkoutExercise[]
  sessions    WorkoutSession[]
}

model WorkoutExercise {
  id          String   @id @default(uuid())
  workout     Workout  @relation(fields: [workoutId], references: [id])
  workoutId   String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId  String
  sets        Int
  reps        Int
  restTime    Int      // in seconds
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([workoutId, exerciseId, order])
}

model WorkoutSession {
  id        String   @id @default(uuid())
  workout   Workout  @relation(fields: [workoutId], references: [id])
  workoutId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  startTime DateTime @default(now())
  endTime   DateTime?
  completed Boolean  @default(false)
  sets      WorkoutSessionSet[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkoutSessionSet {
  id              String         @id @default(uuid())
  workoutSession  WorkoutSession @relation(fields: [sessionId], references: [id])
  sessionId       String
  exerciseId      String
  exerciseName    String         // Denormalized for performance
  setNumber       Int
  reps            Int
  weight          Float?
  completed       Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([sessionId, exerciseId, setNumber])
}
